{
  "compilerOptions": {
    "module": "commonjs", // Use commonjs for Node.js compatibility
    "target": "es6", // Specify ECMAScript target version
    "outDir": "./dist", // Output directory for compiled JS files
    "rootDir": "./src", // Root directory for your source files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true // Enables emit interoperability between CommonJS and ES Modules
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules folder
    "dist" // Exclude dist folder to avoid conflicts
  ]
}
